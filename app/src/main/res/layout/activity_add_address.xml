<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.localgenie.add_address.AddAddressActivity">



   <!-- <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize" />-->




    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/mapRow"
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_anchor="@+id/bottom_sheet"
        app:layout_behavior="com.localgenie.add_address.CollapseBehavior">


        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.localgenie.add_address.AddAddressActivity" />


        <!--</FrameLayout>-->

        <ImageView
            android:id="@+id/map_custom_marker"
            android:layout_width="@dimen/dimen_35dp"
            android:layout_height="@dimen/dimen_35dp"
            android:contentDescription="@string/location"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:src="@drawable/ic_pin" />
    </RelativeLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivBackArrow"
        android:src="@drawable/ic_arrow_back_black_24dp"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/app_margin"/>

    <!--<include layout="@layout/address_map" />-->

    <!-- Adding bottom sheet after main content -->
    <!--<include layout="@layout/bottom_sheet" />-->

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/dimen_10dp"
        app:behavior_hideable="false"
        app:behavior_peekHeight="200dp"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior">


        <View
            android:id="@+id/bottomSheetDivider"
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="@dimen/dimen_3dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:background="@color/grey_background_vdarker" />

        <TextView
            android:id="@+id/tvSetJobLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_15dp"
            android:text="@string/set_location"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize_16sp"
            />

        <EditText
            android:id="@+id/et_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:ellipsize="end"
            android:hint="@string/location"
            android:maxLines="1"
            android:paddingLeft="@dimen/dimen_10dp"
            android:paddingRight="@dimen/dimen_10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize_14sp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_house_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp">
            <EditText
                android:id="@+id/et_house_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/house_flat_no"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="@dimen/dimen_10dp"
                android:paddingRight="@dimen/dimen_10dp"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_14sp" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_15dp"
            android:text="@string/save_as"
            android:textColor="@color/grey_background_vdarker"
            android:textStyle="bold"
            android:textSize="@dimen/textSize_14sp"/>

        <LinearLayout
            android:id="@+id/address_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:id="@+id/etTagAsOther"
                android:hint="@string/other_tag_hint"
                android:textSize="@dimen/textSize_14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvTagAsHome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:layout_weight="1"
                android:background="@drawable/parrot_green_stroke_bottom_bg"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_home"
                android:drawableStart="@drawable/ic_home"
                android:focusable="true"
                android:text="@string/home"
                android:textColor="@color/parrotGreen"
                android:paddingLeft="@dimen/app_margin"
                android:paddingStart="@dimen/app_margin"
                android:layout_marginRight="@dimen/app_margin"
                android:layout_marginEnd="@dimen/app_margin"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/tvTagAsWork"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_work"
                android:drawableStart="@drawable/ic_work"
                android:focusable="true"
                android:text="@string/work"
                android:textColor="@color/grey_background_vdarker"
                android:paddingLeft="@dimen/app_margin"
                android:paddingStart="@dimen/app_margin"
                android:layout_marginRight="@dimen/app_margin"
                android:layout_marginEnd="@dimen/app_margin"
                android:gravity="center"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:id="@+id/tvCancelBtn"
                android:text="@string/cancel"
                android:clickable="false"
                android:textSize="@dimen/textSize_14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvTagAsOther"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_other_addr"
                android:drawableStart="@drawable/ic_other_addr"
                android:focusable="true"
                android:text="@string/other"
                android:textColor="@color/grey_background_vdarker"
                android:paddingLeft="@dimen/dimen_10dp"
                android:paddingStart="@dimen/dimen_10dp"
                android:gravity="center"
                />

        </LinearLayout>

        <Button
            android:id="@+id/add_save_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_5dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/parrot_green_rounded_btn2"
            android:foreground="?attr/selectableItemBackground"
            android:text="@string/save_proceed"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_14sp"/>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>