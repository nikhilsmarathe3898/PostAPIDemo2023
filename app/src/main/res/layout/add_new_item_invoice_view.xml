<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <EditText
        android:id="@+id/etExtraFee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:maxWidth="180dp"
        android:maxHeight="35dp"
        android:singleLine="true"
        android:maxLines="1"
        android:background="@drawable/parrot_green_stroke_bottom_background"
        android:hint="@string/travellingExpenses"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:paddingTop="@dimen/dimen_2dp"
        android:paddingBottom="@dimen/dimen_2dp"
        android:imeOptions="actionNext"
        android:nextFocusForward="@+id/etAmount" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="70dp"
        android:maxHeight="35dp"
        android:background="@drawable/parrot_green_stroke_bottom_background"
        android:orientation="horizontal"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        tools:ignore="RelativeOverlap">

        <TextView
            android:id="@+id/tvCurrencySymbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="@color/black_john"
            android:text="$"
            android:layout_gravity="center_vertical"/>

        <EditText
            android:id="@+id/etAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="100dp"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:maxLines="1"
            android:inputType="numberDecimal"
            android:background="@android:color/transparent"
            android:hint="00.00"
            android:paddingEnd="8dp"
            android:imeOptions="actionDone"
            android:paddingTop="@dimen/dimen_2dp"
            android:paddingBottom="@dimen/dimen_2dp"
            android:paddingStart="8dp"/>

        <TextView
            android:id="@+id/tvCurrencySymbolSuffix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="@color/black_john"
            android:text="$"
            android:layout_gravity="center_vertical"
            android:visibility="gone"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/ivDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close_black_24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/cancelIcon" />

</RelativeLayout>