<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_background"
    tools:context="com.localgenie.invoice.InvoiceActivity"
    android:fitsSystemWindows="true">

    <include layout="@layout/tool_barlayout"
        android:id="@+id/toolBarInvoice"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/nestedScrollViewInvoice"
        android:layout_marginTop="?attr/actionBarSize"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <!-- android:layout_marginTop="?actionBarSize"-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey_background"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/llCutomerDetails"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:padding="16dp"
                android:background="@color/white"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ivCustomer"
                    android:layout_width="@dimen/dimen_60dp"
                    android:layout_height="@dimen/dimen_60dp"
                    android:contentDescription="@string/app_name" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/ivCustomer"
                    android:layout_toRightOf="@id/ivCustomer"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    >

                    <TextView
                        android:id="@+id/tvCustomerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:textSize="17sp"
                        android:textColor="@color/black_john" />

                    <TextView
                        android:id="@+id/tvCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/black_john"
                        android:textSize="16sp"
                        tools:text="Internal wall Painting"
                        android:layout_marginTop="3dp"
                        android:background="@color/white"/>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:padding="16dp"
                android:background="@color/white"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tvTotalBillAmountLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/black_john"
                    android:text="@string/pay"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvTotalBillAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="34sp"
                    android:textStyle="bold"
                    android:textColor="@color/black_john"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_time"
                    android:drawableLeft="@drawable/ic_time"
                    android:gravity="center_vertical"
                    android:drawablePadding="5dp"
                    android:text=""
                    android:textSize="15sp"
                    android:textColor="@color/black_john"
                    android:layout_marginTop="5dp" />

                <RelativeLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_date"
                        android:drawableLeft="@drawable/ic_date"
                        android:gravity="center_vertical"
                        android:drawablePadding="5dp"
                        android:text=""
                        android:textSize="15sp"
                        android:textColor="@color/black_john"
                        android:layout_marginTop="5dp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="@dimen/app_margin"
                        android:id="@+id/viewTimeSpent"
                        android:background="@color/grey_background_vdarker"
                        android:layout_toRightOf="@+id/tvTime"
                        android:layout_toEndOf="@+id/tvTime"
                        android:layout_marginLeft="@dimen/app_margin"
                        android:layout_marginStart="@dimen/app_margin"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="5dp"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/app_margin"
                        android:layout_marginStart="@dimen/app_margin"
                        android:id="@+id/tvTimeSpent"
                        android:text="Time Spent"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/viewTimeSpent"
                        android:layout_toEndOf="@+id/viewTimeSpent"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/black_john"
                        />

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/llMainServicePay"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:padding="16dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tvSelectedServiceLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/black_john"
                    android:text="@string/selected_service"
                    android:textStyle="bold"
                    android:visibility="gone"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rlJobFee"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp">

                    <TextView
                        android:id="@+id/tvJobFeeLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/black_john"
                        android:text="@string/services" />

                    <TextView
                        android:id="@+id/tvJobFee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:textSize="15sp"
                        android:textColor="@color/black_john"
                        tools:ignore="RelativeOverlap"
                        android:text="@string/price" />

                </RelativeLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/llService"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/rlTravelFee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvTravelFeeLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/black_john"
                        android:text="@string/travelFee" />

                    <TextView
                        android:id="@+id/tvTravelFee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:textSize="15sp"
                        android:textColor="@color/black_john" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlVisitFee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvVisitFeeLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/black_john"
                        android:text="@string/visitFee" />

                    <TextView
                        android:id="@+id/tvVisitFee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:textSize="15sp"
                        android:textColor="@color/black_john" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlLastDue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvLastDueLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/black_john"
                        android:text="@string/lastDue" />

                    <TextView
                        android:id="@+id/tvLastDue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:textSize="15sp"
                        android:textColor="@color/black_john" />

                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rlServiceFee"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp">

                    <TextView
                        android:id="@+id/tvServiceLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/black_john"
                        android:text="@string/consulationFee" />

                    <TextView
                        android:id="@+id/tvServiceFee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:textSize="15sp"
                        android:textColor="@color/black_john"
                        tools:ignore="RelativeOverlap" />

                </RelativeLayout>

                <RelativeLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rlDiscountFee"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp">

                    <TextView
                        android:id="@+id/tvDiscountLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/black_john"
                        android:text="@string/discountFee" />

                    <TextView
                        android:id="@+id/tvDiscount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:textSize="15sp"
                        android:textColor="@color/black_john"
                        tools:ignore="RelativeOverlap" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/llAddExtraItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                </LinearLayout>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tvAddNewItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/addNewItem"
                    android:textColor="@color/black_john"
                    android:textSize="15sp"
                    android:drawableStart="@drawable/ic_add_circle_outline_black_24dp"
                    android:drawableLeft="@drawable/ic_add_circle_outline_black_24dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="5dp"
                    android:paddingEnd="5dp"
                    android:background="?selectableItemBackground"
                    />
                <TextView
                    android:id="@+id/tvEditItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/editAddNewItem"
                    android:textColor="@color/black_john"
                    android:textSize="15sp"
                    android:visibility="gone"
                    android:drawableStart="@drawable/ic_edit_black_24dp"
                    android:drawableLeft="@drawable/ic_edit_black_24dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="5dp"
                    android:paddingEnd="5dp"
                    android:background="?selectableItemBackground"/>


                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvPromoCode"
                    android:text="@string/applyPromoCode"
                    android:textColor="@color/parrotGreen"
                    android:textSize="@dimen/textSize_14sp"
                    android:padding="@dimen/dimen_5dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey_background_darker"
                    android:layout_marginTop="8dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp">

                    <TextView
                        android:id="@+id/tvTotalLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/black_john"
                        android:text="@string/total" />

                    <TextView
                        android:id="@+id/tvTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:textSize="15sp"
                        android:textColor="@color/black_john" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/grey_background_darker" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvConfirm"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@drawable/parrot_green_rounded_btn"
                android:textSize="@dimen/textSize_16sp"
                android:text="@string/confirm"
                android:padding="@dimen/dimen_10dp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"
                android:textAllCaps="true"
                android:layout_marginBottom="@dimen/dimen_5dp"/>

            <LinearLayout
                android:id="@+id/llPayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:padding="16dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tvPaymentMethodLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/payment_method"
                    android:textSize="16sp"
                    android:textColor="@color/black_john"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvPaymentMethod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_menu_payment"
                    android:drawableLeft="@drawable/ic_menu_payment"
                    android:gravity="center_vertical"
                    android:text="@string/cardFirst16Digit"
                    android:textColor="@color/black_john"
                    android:textSize="17sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llQuestionAnswer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:padding="16dp"
                android:background="@color/white"
                android:visibility="gone">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSignature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:visibility="visible"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tvSignatureHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/signatureHeader"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black_john"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="30dp"/>

                <com.github.gcacace.signaturepad.views.SignaturePad
                    android:id="@+id/signaturePad"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:background="@drawable/signature_pad"
                    app:penColor="@color/black_john"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="0.3dp"
                        android:background="@color/grey_background_darker"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/tvRetake"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/retake"
                        android:textSize="16sp"
                        android:textColor="@color/grey_john"
                        android:drawableLeft="@drawable/ic_refresh_black_24dp"
                        android:drawableStart="@drawable/ic_refresh_black_24dp"
                        android:drawablePadding="10dp"
                        android:background="@color/white"
                        android:padding="5dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:weightSum="2"
                    android:paddingRight="6dp"
                    android:paddingLeft="6dp"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:layout_gravity="bottom">

                    <SeekBar
                        android:id="@+id/seekBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="53dp"
                        android:maxHeight="53dp"
                        android:alpha="0.5"
                        android:clickable="false"
                        android:max="100"
                        android:layout_margin="5dp"
                        android:thumb="@drawable/vector_color_primary_next"
                        android:progressDrawable="@drawable/seek_bar_color"
                        android:splitTrack="false"
                        android:layout_centerInParent="true"
                        android:thumbOffset="-4dp"/>

                    <TextView
                        android:id="@+id/tvSeekbarText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textSize="16sp"
                        android:textAllCaps="true"
                        android:textColor="@color/parrotGreen"
                        android:text="@string/invoiceCustomer"/>\
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>
