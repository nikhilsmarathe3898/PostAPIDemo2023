<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/llMainBookingType"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvBookingTypeWhenYOu"
            android:text="@string/whenYouWantToBook"
            android:textColor="@color/black_john"/>
        <!--*****************Now Booking*******************-->
        <android.support.v7.widget.GridLayout
            android:id="@+id/glNowGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:rowCount="3"
            android:layout_marginTop="@dimen/app_margin"
            android:layout_marginBottom="@dimen/app_margin"
            app:columnCount="3"
            android:visibility="gone">
            <ImageView
                android:id="@+id/ivNowCheck"
                android:layout_height="wrap_content"
                android:layout_width="30dp"
                android:src="@drawable/circle_check_uncheck"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_marginEnd="@dimen/dimen_10dp"
                android:contentDescription="@string/app_name" />
            <TextView
                android:id="@+id/tvNow"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:textSize="14sp"
                android:text="@string/now"
                android:textColor="@color/grey_black_color_selector"
                app:layout_gravity="center_vertical"
                app:layout_columnWeight="1"/>
            <Space android:layout_width="@dimen/dimen_30dp"
                android:layout_height="wrap_content"/>
            <Space />
            <TextView
                android:id="@+id/tvNowDesc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                app:layout_columnWeight="1"
                android:textColor="@color/grey_black_color_selector"
                android:text="@string/nowBookingDesc"/>
            <Space android:layout_width="30dp"
                android:layout_height="30dp"/>
            <Space />
            <TextView
                android:layout_marginTop="@dimen/dimen_10dp"
                android:id="@+id/tvNowDecSelected"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                app:layout_columnWeight="1"
                android:textColor="@color/black_john"
                android:text="@string/nowBookingFooter"
                android:visibility="gone"
                />
            <Space android:layout_width="30dp"
                android:layout_height="30dp"
                android:visibility="gone"
                android:id="@+id/spaceNow"/>
        </android.support.v7.widget.GridLayout>
        <!--**********Duration***********-->
        <android.support.v7.widget.GridLayout
            android:id="@+id/glNowPartTimeGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:rowCount="2"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_marginBottom="@dimen/dimen_5dp"
            app:columnCount="3"
            android:visibility="gone">
            <Space android:layout_width="@dimen/dimen_30dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvNowSelTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_12sp"
                app:layout_columnWeight="1"
                android:text="@string/select_duration"
                android:textColor="@color/black_john"/>
            <Space android:layout_width="30dp"
                android:layout_height="wrap_content"/>
            <Space android:layout_width="40dp"
                android:layout_height="wrap_content"/>
            <TextView

                android:id="@+id/tvNowTodaysTime"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:textSize="@dimen/textSize_14sp"
                android:text="--------"
                android:textColor="@color/parrotGreen"
                app:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                app:layout_columnWeight="1"/>
            <ImageView
                android:id="@+id/ivNowTime"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_time"
                android:contentDescription="@string/app_name"
                app:layout_gravity="center_vertical"
                android:gravity="center_vertical"/>

        </android.support.v7.widget.GridLayout>

        <View
            android:id="@+id/vebookingDivider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorAccent" />


        <!--********************Single Shifts*****************-->
        <android.support.v7.widget.GridLayout
            android:id="@+id/glLaterGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:rowCount="2"
            android:layout_marginTop="@dimen/app_margin"
            android:layout_marginBottom="@dimen/app_margin"
            app:columnCount="3"
            android:visibility="gone">
            <ImageView
                android:id="@+id/ivLaterCheck"
                android:layout_height="wrap_content"
                android:layout_width="30dp"
                android:src="@drawable/circle_check_uncheck"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_marginEnd="@dimen/dimen_10dp"
                android:contentDescription="@string/app_name" />
            <TextView
                android:id="@+id/tvLater"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:textSize="14sp"
                android:text="@string/schedule"
                app:layout_gravity="center_vertical"
                android:textColor="@color/grey_black_color_selector"
                app:layout_columnWeight="1"/>
            <Space android:layout_width="@dimen/dimen_30dp"
                android:layout_height="wrap_content"/>
            <Space />
            <TextView
                android:id="@+id/tvLaterDesc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                app:layout_columnWeight="1"
                android:textColor="@color/grey_black_color_selector"
                android:text="@string/scheduledDesc"/>
            <Space android:layout_width="30dp"
                android:layout_height="30dp"/>
        </android.support.v7.widget.GridLayout>

        <!--Serve us ui-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/app_margin"
            android:layout_marginLeft="@dimen/app_margin"
            android:layout_marginRight="@dimen/app_margin"
            >

            <include layout="@layout/single_shift_serveus"/>

        </RelativeLayout>
        <!--*********Single shift select date************-->
        <android.support.v7.widget.GridLayout
            android:id="@+id/glLaterPartGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:rowCount="2"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_marginBottom="@dimen/dimen_5dp"
            app:columnCount="3"
            android:visibility="gone">

            <Space android:layout_width="@dimen/dimen_30dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvSelDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_12sp"
                app:layout_columnWeight="1"
                android:text="@string/select_date"
                android:textColor="@color/black_john"/>
            <Space android:layout_width="30dp"
                android:layout_height="wrap_content"/>
            <Space android:layout_width="40dp"
                android:layout_height="wrap_content"/>
            <TextView

                android:id="@+id/tvTodaysDate"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:textSize="@dimen/textSize_14sp"
                android:text="--------"
                android:textColor="@color/parrotGreen"
