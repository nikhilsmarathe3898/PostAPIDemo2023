                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                app:layout_gravity="center_vertical"
                android:contentDescription="@string/app_name" />
        </android.support.v7.widget.GridLayout>
        <!--************Select time**************-->
        <android.support.v7.widget.GridLayout
