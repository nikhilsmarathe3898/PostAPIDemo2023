                android:layout_height="30dp"/>

            <TextView
                android:id="@+id/tvTodaysRepeatDays"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:textSize="@dimen/textSize_14sp"
                android:text="----------"
                android:textColor="@color/parrotGreen"
                app:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                app:layout_columnWeight="1"/>
            <ImageView
                android:id="@+id/ivRepeatDays"
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:src="@drawable/ic_arrow"
                app:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:foregroundGravity="center_vertical"
                android:contentDescription="@string/app_name" />
        </android.support.v7.widget.GridLayout>

        <!--Select start time-->

        <android.support.v7.widget.GridLayout
            android:id="@+id/glRepeatPartTimeGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:rowCount="2"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_marginBottom="@dimen/dimen_5dp"
            app:columnCount="3"
            android:visibility="gone">


            <Space android:layout_width="@dimen/dimen_30dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvRepeatSelTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_12sp"
                app:layout_columnWeight="1"
                android:text="@string/shift_time"
                android:textColor="@color/black_john"/>

            <Space android:layout_width="30dp"
                android:layout_height="@dimen/dimen_25dp"/>
            <Space android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:id="@+id/tvRepeatStartTime"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:textSize="@dimen/textSize_14sp"
                android:text="--------"
                android:textColor="@color/parrotGreen"
                app:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                app:layout_columnWeight="1"/>
            <ImageView
                android:id="@+id/ivRepeatTime"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_time"
                app:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:foregroundGravity="center_vertical"
                android:contentDescription="@string/app_name" />


        </android.support.v7.widget.GridLayout>

        <!--Duration-->

        <android.support.v7.widget.GridLayout
            android:id="@+id/glRepeatPartDurationGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:rowCount="2"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_marginBottom="@dimen/dimen_5dp"
            app:columnCount="3"
            android:visibility="gone">
            <Space android:layout_width="@dimen/dimen_30dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvSelRepeatDuration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_12sp"
                app:layout_columnWeight="1"
                android:text="@string/select_duration"
                android:textColor="@color/black_john"/>

            <Space android:layout_width="30dp"
                android:layout_height="@dimen/dimen_25dp"/>
            <Space android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:id="@+id/tvSelRepeatDurationTime"
                android:layout_height="30dp"
                android:layout_width="0dp"
                android:textSize="@dimen/textSize_14sp"
                android:text="--------"
                android:textColor="@color/parrotGreen"
                app:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                app:layout_columnWeight="1"/>
            <ImageView
                android:id="@+id/ivSelRepeatDuration"
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:src="@drawable/ic_arrow"
                app:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:foregroundGravity="center_vertical"
                android:contentDescription="@string/app_name" />


        </android.support.v7.widget.GridLayout>


        <include layout="@layout/multiple_shifts"/>

        <!--*****************End of multiple shifts booking******************-->



        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerViewBookingType"
            android:layout_marginTop="@dimen/app_margin"
            android:visibility="gone">
        </android.support.v7.widget.RecyclerView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/writeHere"
            android:visibility="invisible"
            android:padding="@dimen/dimen_10dp"
            />

