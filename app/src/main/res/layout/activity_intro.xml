<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/landing_page"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_70dp"
        android:src="@drawable/ic_landing_logo"
        android:layout_marginTop="@dimen/dimen_50dp"
        android:contentDescription="@string/app_name" /><!--app:srcCompat-->
    <LinearLayout
        android:id="@+id/ll_login_bottom_part"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvCaptionLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/trusted_services_delivered"
            android:layout_marginStart="@dimen/dimen_40dp"
            android:layout_marginLeft="@dimen/dimen_40dp"
            android:layout_marginRight="@dimen/dimen_40dp"
            android:layout_marginEnd="@dimen/dimen_40dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:textSize="@dimen/textSize_16sp"
            android:textColor="@color/black"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tvDescriptionLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginStart="@dimen/dimen_40dp"
            android:layout_marginLeft="@dimen/dimen_40dp"
            android:layout_marginRight="@dimen/dimen_40dp"
            android:layout_marginEnd="@dimen/dimen_40dp"
            android:layout_marginBottom="@dimen/dimen_30dp"
            android:paddingLeft="@dimen/dimen_30dp"
            android:paddingRight="@dimen/dimen_30dp"
            android:text="@string/beauticians_to_yoga_trainers"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvLandingLanguages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/dimen_10dp"
            android:textAllCaps="true"
            android:textColor="@color/black_john"
            android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"
            android:drawableEnd="@drawable/ic_keyboard_arrow_down_black_24dp"
            android:layout_marginBottom="@dimen/dimen_5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginEnd="@dimen/dimen_20dp"
            android:layout_marginStart="@dimen/dimen_20dp"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:layout_marginBottom="@dimen/dimen_20dp">
            <Button
                android:id="@+id/btnLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/login_green_stroke_background"
                android:textColor="@color/parrotGreen"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:minHeight="@dimen/dimen_40dp"
                android:text="@string/signin_login"
                android:textAllCaps="false"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btnGetStarted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/parrot_green_background"
                android:textColor="@color/white"
                android:text="@string/get_started"
                android:minHeight="@dimen/dimen_40dp"
                android:textAllCaps="false"
                android:layout_weight="3"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
