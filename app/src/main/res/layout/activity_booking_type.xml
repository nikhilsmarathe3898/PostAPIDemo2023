<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/rlMainBookingType"
    tools:context="com.localgenie.bookingtype.BookingType">

    <include layout="@layout/tool_barlayout"
        android:id="@+id/toolBookingType"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolBookingType"
        android:layout_above="@+id/tvBookTypeSave"
        android:layout_marginTop="@dimen/app_margin"
        android:layout_marginLeft="@dimen/app_margin"
        android:layout_marginRight="@dimen/app_margin">
        <include layout="@layout/include_booking_type"/>

    </RelativeLayout>



    <TextView

        android:id="@+id/tvBookTypeSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/confirm"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:background="@drawable/button_appcolor_ripple_selector"
        android:paddingTop="@dimen/dimen_11_5dp"
        android:paddingBottom="@dimen/dimen_11_5dp"
        android:textSize="@dimen/textSize_18sp"
        android:layout_margin="@dimen/app_margin"
        />
</RelativeLayout>
