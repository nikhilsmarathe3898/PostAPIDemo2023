<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:paddingTop="@dimen/dimen_5dp"
    android:paddingBottom="@dimen/dimen_5dp"><!-- android:layout_marginLeft="@dimen/app_margin"
    android:layout_marginRight="@dimen/app_margin"-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvRatingName"
        android:textSize="@dimen/textSize_14sp"
        android:textColor="@color/grey_john"
        android:text="@string/app_name"
        android:layout_centerVertical="true"

        />
    <RatingBar
        android:id="@+id/rtRating"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:numStars="5"
        android:progressDrawable="@drawable/ratingselector"
        android:rating="0.0"
        android:stepSize="0.5"
        android:gravity="end"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/dimen_5dp"/>

</RelativeLayout>