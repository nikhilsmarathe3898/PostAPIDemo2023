<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.localgenie.providerList.ProviderList">
    <include layout="@layout/tool_barlayout"
        android:id="@+id/providerToolBar"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nestedScrollViewProList">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

            <RelativeLayout
                android:id="@+id/rlSearchLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/search_background"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:layout_marginBottom="@dimen/dimen_5dp"
                android:layout_marginTop="@dimen/dimen_3dp"
                android:animateLayoutChanges="true">

                <ImageView
                    android:id="@+id/ivSearchImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_search_black_24dp"
                    android:layout_marginLeft="@dimen/app_margin"
                    android:layout_marginRight="@dimen/app_margin"
                    android:contentDescription="@string/app_name"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/tvSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/ivSearchImage"
                    android:layout_toEndOf="@+id/ivSearchImage"
                    android:text="@string/search_for_providers"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/dimen_55dp"
                    android:layout_marginEnd="@dimen/dimen_55dp"
                    android:paddingTop="@dimen/dimen_7dp"
                    android:paddingBottom="@dimen/dimen_7dp"
                    />
            </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/cardSubCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:elevation="0.5dp">
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recyclerViewSubCat"
                    android:layout_marginTop="@dimen/app_margin"
                    android:layout_marginBottom="@dimen/dimen_5dp">

                </android.support.v7.widget.RecyclerView>

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recyclerViewFiltered"
                    android:visibility="gone">
                </android.support.v7.widget.RecyclerView>

            </RelativeLayout>

            <com.utility.ShimmerLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/shimmerProvider"
                app:shimmer_animation_duration="1500"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <include layout="@layout/provider_placeholder_item"
                        android:id="@+id/included"/>
                    <include layout="@layout/provider_placeholder_item"
                        android:id="@+id/included"/>
                    <include layout="@layout/provider_placeholder_item"
                        android:id="@+id/included"/>
                    <include layout="@layout/provider_placeholder_item"
                        android:id="@+id/included"/>

                </LinearLayout>


            </com.utility.ShimmerLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_5dp"
                android:background="@color/grey_background"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerViewProviderList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/app_margin"
                >

            </android.support.v7.widget.RecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/llNoProviderAvailable"
                android:layout_marginTop="@dimen/dimen_100dp"
                android:visibility="gone">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/tvProviderNotAvailable"
                    android:text="@string/providerNotAvailable"
                    android:drawableTop="@drawable/ic_no_provider"
                    android:gravity="center|center_vertical"/>
            </LinearLayout>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="@dimen/dimen_50dp"
        android:layout_height="@dimen/dimen_50dp"
        android:layout_gravity="center"
        android:visibility="gone"
        />
</LinearLayout>
