<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.GridLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:columnCount="3"
        app:rowCount="3"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_marginBottom="@dimen/dimen_20dp"
        android:layout_marginLeft="@dimen/app_margin"
        android:layout_marginRight="@dimen/app_margin"
        android:layout_weight="1"
       >
        <TextView android:id="@+id/serviceName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Standard Notarization gsdrhrhrhrh gsdsdgr "
            app:layout_columnSpan="2"
            android:maxLines="1"
            app:layout_columnWeight="2"
            android:textColor="@color/black_john"
            app:layout_gravity="center_vertical"
            android:textSize="@dimen/textSize_14sp"/>
        <FrameLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            app:layout_columnWeight="1"
            app:layout_rowSpan="2">
            <TextView android:id="@+id/addbtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/add_Cart"
                android:background="@drawable/card_grey_green"
                android:paddingTop="@dimen/dimen_5dp"
                android:paddingBottom="@dimen/dimen_5dp"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="@color/black_john" />

            <TextView android:id="@+id/removeBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/remove_Cart"
                android:background="@drawable/card_grey_green"
                android:paddingTop="@dimen/dimen_5dp"
                android:paddingBottom="@dimen/dimen_5dp"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="@color/white"
                android:visibility="gone"/>
            <LinearLayout
                android:id="@+id/ll_add_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:background="@drawable/parrot_green_stroke_bottom_background"
                android:visibility="gone">


                <ImageView
                    android:id="@+id/iv_remove"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_remove_black_24dp"
                    android:paddingTop="@dimen/dimen_4dp"
                    android:paddingBottom="@dimen/dimen_4dp"
                    android:paddingLeft="@dimen/dimen_5dp"
                    android:paddingStart="@dimen/dimen_5dp"
                    android:layout_gravity="end"
                    android:contentDescription="@string/app_name" />

                <TextView
                    android:id="@+id/tv_quantity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/parrotGreen"
                    android:textSize="@dimen/textSize_20sp"
                    tools:text="3"/>

                <ImageView
                    android:id="@+id/iv_add"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dimen_4dp"
                    android:paddingBottom="@dimen/dimen_4dp"
                    android:paddingRight="@dimen/dimen_5dp"
                    android:paddingEnd="@dimen/dimen_5dp"
                    android:src="@drawable/ic_add_black_24dp"
                    android:contentDescription="@string/app_name" />

            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnSpan="2"
            android:layout_marginTop="7dp"
            app:layout_columnWeight="1"
            android:orientation="horizontal"
            android:layout_marginBottom="7dp">
            <TextView
                android:id="@+id/totalCost"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="$ 35.00"
                android:textColor="@color/black_john"
                android:textSize="@dimen/textSize_13sp"
                />
            <TextView
                android:id="@+id/tvPerSignature"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                tools:text="Per Signature"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginStart="@dimen/dimen_10dp"
                android:textColor="@color/black_john"
                android:textSize="@dimen/textSize_13sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_columnSpan="3"
            app:layout_columnWeight="3">

            <TextView android:id="@+id/serviceDisc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Average is 6-8 signature"
                android:maxLength="25"
                android:singleLine="true"
                android:textColor="@color/black_john"
                android:textSize="@dimen/textSize_13sp"/>
            <TextView android:id="@+id/viewMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View more.."
                android:textColor="@color/parrotGreen"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginStart="@dimen/dimen_10dp"
                android:textSize="@dimen/textSize_13sp"
                />
        </LinearLayout>

    </android.support.v7.widget.GridLayout>

</LinearLayout>
