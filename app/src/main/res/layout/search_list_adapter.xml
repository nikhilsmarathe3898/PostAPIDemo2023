<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/cardSearch"
        android:layout_margin="@dimen/dimen_10dp"
        app:cardCornerRadius="@dimen/dimen_4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ivSearch"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_7dp"
                android:layout_marginEnd="@dimen/dimen_7dp"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_marginStart="@dimen/app_margin"
                android:contentDescription="@string/app_name"
                android:padding="@dimen/dimen_5dp"

                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etSearch"
                android:hint="@string/searchCategory"
                android:layout_toRightOf="@+id/ivSearch"
                android:layout_toEndOf="@+id/ivSearch"
                android:padding="@dimen/dimen_5dp"
                android:inputType="text"
                android:layout_toLeftOf="@+id/ivSearchProgressClear"
                android:layout_toStartOf="@+id/ivSearchProgressClear"
                android:background="@null"
                android:textColor="@color/black_john"
                />
            <LinearLayout
                android:id="@+id/ivSearchProgressClear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <ProgressBar
                    android:layout_width="@dimen/dimen_25dp"
                    android:layout_height="@dimen/dimen_25dp"
                    android:id="@+id/progressBarShow"
                    android:layout_gravity="center"
                    android:visibility="gone"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ivSearchClear"
                    android:src="@drawable/ic_clear_black_24dp"
                    android:layout_marginRight="@dimen/app_margin"
                    android:layout_marginEnd="@dimen/app_margin"
                    android:layout_marginLeft="@dimen/dimen_7dp"
                    android:layout_marginStart="@dimen/dimen_7dp"
                    android:contentDescription="@string/app_name"
                    android:padding="@dimen/dimen_5dp"/>
            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recyclerView">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>