<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvyouHavePromo"
            android:text="@string/applyPromoCode"
            android:layout_marginLeft="@dimen/app_margin"
            android:layout_marginRight="@dimen/app_margin"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:textColor="@color/black_john"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/crossButton"
            android:src="@drawable/ic_close_black_24dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/parrot_green_stroke_bottom_background"
        android:layout_marginLeft="@dimen/app_margin"
        android:layout_marginStart="@dimen/app_margin"
        android:layout_marginEnd="@dimen/app_margin"
        android:layout_marginRight="@dimen/app_margin"
        android:layout_marginTop="@dimen/dimen_50dp"
        android:layout_marginBottom="@dimen/dimen_60dp"
       >



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etPromoCode"
            android:background="@android:color/transparent"
            android:hint="@string/yourPromocode"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/app_margin"
            android:paddingStart="@dimen/app_margin"
            android:paddingRight="@dimen/app_margin"
            android:layout_marginRight="@dimen/dimen_80dp"
            android:layout_marginEnd="@dimen/dimen_80dp"
            android:inputType="text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvApply"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="@string/apply"
            android:layout_centerVertical="true"
            android:textSize="@dimen/textSize_14sp"
            android:textColor="@color/parrotGreen"
            android:padding="@dimen/dimen_7dp"
            tools:ignore="RelativeOverlap" />

    </RelativeLayout>

</LinearLayout>