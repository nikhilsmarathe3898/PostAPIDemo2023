<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".favouriteProvider.FavouriteProvider">

    <include layout="@layout/tool_barlayout"
        android:id="@+id/favToolBar"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recyclerViewGrid"
        android:layout_below="@+id/favToolBar">

    </android.support.v7.widget.RecyclerView>

    <ProgressBar
        android:layout_width="@dimen/dimen_60dp"
        android:layout_height="@dimen/dimen_60dp"
        android:layout_centerInParent="true"
        android:id="@+id/progressBarSet"
        android:visibility="gone"/>

</RelativeLayout>