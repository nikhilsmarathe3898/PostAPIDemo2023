<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/tool_barlayout"
        android:id="@+id/toolBarRepeatDays"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolBarRepeatDays"
        android:layout_above="@+id/tvRepeatDays">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBoxAllDays"
                android:text="@string/eachDaysOfTheWeeks"
                android:drawablePadding="@dimen/app_margin"
                android:textColor="@color/black_john"
                android:textSize="@dimen/textSize_14sp"
                android:layout_margin="@dimen/app_margin"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/grey_background"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvSelectRepeatDays"
                android:text="@string/selectDays"
                android:textColor="@color/black_john"
                android:textSize="@dimen/textSize_14sp"
                android:padding="@dimen/app_margin"/>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recyclerRepeatDays">

            </android.support.v7.widget.RecyclerView>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/grey_background"
                android:layout_marginTop="@dimen/app_margin"
                android:visibility="gone"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBoxWeekendDays"
                android:text="@string/Weekend"
                android:drawablePadding="@dimen/app_margin"
                android:textColor="@color/black_john"
                android:textSize="@dimen/textSize_14sp"
                android:layout_margin="@dimen/app_margin"
                android:visibility="gone"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/grey_background"
                android:visibility="gone"
               />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBoxWeekDays"
                android:text="@string/WeekDays"
                android:drawablePadding="@dimen/app_margin"
                android:textColor="@color/black_john"
                android:textSize="@dimen/textSize_14sp"
                android:layout_margin="@dimen/app_margin"
                android:visibility="gone"/>




        </LinearLayout>
    </ScrollView>



    <TextView

        android:id="@+id/tvRepeatDays"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/dones"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:background="@drawable/button_appcolor_ripple_selector"
        android:paddingTop="@dimen/dimen_11_5dp"
        android:paddingBottom="@dimen/dimen_11_5dp"
        android:textSize="@dimen/textSize_18sp"
        android:layout_margin="@dimen/app_margin"
        />

</RelativeLayout>