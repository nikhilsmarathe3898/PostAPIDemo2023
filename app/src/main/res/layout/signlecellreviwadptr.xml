<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_5dp">


    <RelativeLayout
        android:id="@+id/rlivReviw"
        android:layout_width="50dp"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/ivReview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            />
        <!-- android:src="@drawable/camera_signup_circleordr"-->

        <ImageView
            android:id="@+id/ivReviewImage"
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_centerInParent="true"
            android:contentDescription="@string/app_name" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlMainReview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/app_margin"
        android:layout_marginStart="@dimen/app_margin"
        android:layout_toEndOf="@+id/rlivReviw"
        android:layout_toRightOf="@+id/rlivReviw">

        <TextView
            android:id="@+id/tvReviwName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:text="@string/about_me"
            android:textColor="@color/black_john"
            android:textSize="@dimen/textSize_16sp" />

        <TextView
            android:id="@+id/tvReviewTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvReviwName"
            android:layout_marginTop="-4dp"
            android:text="@string/about_me"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/textSize_12sp" />

        <RatingBar
            android:id="@+id/rtReviewadptr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:numStars="5"
            android:progressDrawable="@drawable/ratingselector"
            android:rating="5.0"
            android:stepSize="0.5" />

        <TextView
            android:id="@+id/tvReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rtReviewadptr"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="-12dp"
            android:textColor="@color/black_john"
            android:textSize="@dimen/textSize_14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/rlMainReview"
        android:background="@color/grey_background" />


</RelativeLayout>