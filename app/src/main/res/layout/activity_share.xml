<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".share.ShareActivity">

    <include
        android:id="@+id/toolbarLayout"
        layout="@layout/tool_barlayout" />

    <ScrollView
        android:id="@+id/share_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbarLayout"
        android:isScrollContainer="true"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/header_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_30dp"
                android:layout_marginTop="@dimen/dimen_30dp"
                android:gravity="center"
                android:layout_marginRight="@dimen/app_margin"
                android:layout_marginLeft="@dimen/app_margin">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:id="@+id/tvShareCode"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:text="@string/share_header_text"
                    android:textSize="@dimen/textSize_16sp"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/share_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header_row"
                android:layout_marginTop="@dimen/dimen_30dp"
                android:gravity="center"
                android:text="@string/share_code"
                android:textColor="@color/grey_background_vdarker"
                android:textSize="@dimen/textSize_16sp" />

            <TextView
                android:id="@+id/referral_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/share_txt"
                android:gravity="center"
                android:textColor="@color/parrotGreen"
                android:textSize="@dimen/textSize_28sp" />

            <View
                android:id="@+id/divider_last"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_below="@+id/referral_code"
                android:layout_margin="@dimen/dimen_20dp"
                android:background="@color/dialogDivider"
                android:padding="@dimen/dimen_5dp" />

            <TextView
                android:id="@+id/social_share_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider_last"
                android:gravity="center"
                android:text="@string/share_social_text"
                android:textColor="@color/grey_background_vdarker"
                android:textSize="@dimen/textSize_14sp" />


            <LinearLayout
                android:id="@+id/social_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/social_share_txt"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:orientation="horizontal"
                android:weightSum="3.8">

                <TextView
                    android:id="@+id/tv_facebook"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:drawableTop="@drawable/facebook_icn"
                    android:padding="@dimen/dimen_5dp"
                    android:text="@string/facebook"
                    android:textAlignment="center"
                    android:textSize="@dimen/textSize_14sp" />

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:drawableTop="@drawable/email_icn"
                    android:padding="@dimen/dimen_5dp"
                    android:text="@string/email"
                    android:textAlignment="center"
                    android:textSize="@dimen/textSize_14sp" />

                <TextView
                    android:id="@+id/tv_message"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:drawableTop="@drawable/message_icn"
                    android:padding="@dimen/dimen_5dp"
                    android:text="@string/guestLoginMessage"
                    android:textAlignment="center"
                    android:textSize="@dimen/textSize_14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/social_row"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="3">

                <TextView
                    android:id="@+id/tv_whatsapp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_25dp"
                    android:layout_marginEnd="@dimen/dimen_25dp"
                    android:drawableTop="@drawable/whatsapp_icn"
                    android:padding="@dimen/dimen_2dp"
                    android:text="@string/whatsapp"
                    android:textAlignment="center"
                    android:textSize="@dimen/textSize_16sp"
                    />
                <!--  android:layout_marginLeft="@dimen/dimen_63dp"
                    android:layout_marginStart="@dimen/dimen_63dp"-->

                <TextView
                    android:id="@+id/tv_twitter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:layout_marginStart="@dimen/dimen_20dp"
                    android:layout_marginRight="@dimen/dimen_25dp"
                    android:layout_marginEnd="@dimen/dimen_25dp"
                    android:drawableTop="@drawable/twitter_icn"
                    android:padding="@dimen/dimen_2dp"
                    android:text="@string/twitter"
                    android:textAlignment="center"
                    android:textSize="@dimen/textSize_16sp" />

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>