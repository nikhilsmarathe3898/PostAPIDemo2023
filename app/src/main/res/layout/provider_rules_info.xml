<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlInstrument"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

        <TextView
            android:id="@+id/tvProInstrument"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/app_margin"
            android:paddingTop="@dimen/app_margin"
            android:layout_marginLeft="@dimen/app_margin"
            android:layout_marginRight="@dimen/app_margin"
            tool:text="asdfg"
            android:textColor="@color/black_john"
            android:textSize="@dimen/textSize_16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/tvProInstrument">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerViewproInstrument"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_marginRight="@dimen/app_margin"
                />
            <TextView
                android:id="@+id/tvProInstruments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvProInstrument"
                android:text="asdrftgyhj"
                android:textColor="@color/black_john"
                android:visibility="gone"
                android:textSize="@dimen/textSize_14sp"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_marginRight="@dimen/app_margin"/>

            <View
                android:id="@+id/veProDivider6"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/grey_background"
                android:layout_marginTop="@dimen/app_margin"

                />

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>