<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/bottom_sheetOnTheWay"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    app:behavior_hideable="false"
    app:behavior_peekHeight="@dimen/dimen_80dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <RelativeLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dimen_35dp"
        android:paddingTop="@dimen/dimen_30dp">
        <TextView
            android:id="@+id/tvName"
            tools:text="Sara Francis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:textSize="@dimen/textSize_18sp"/>

        <LinearLayout
            android:id="@+id/llProviderInfo"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tvName"
            android:padding="@dimen/dimen_5dp"
            android:visibility="gone">
            <RatingBar
                android:id="@+id/rbProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/ratingBarStyleSmall"
                android:rating="4.5"
                android:progressTint="@color/parrotGreen"/>
            <TextView
                android:id="@+id/tvRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:paddingLeft="@dimen/dimen_10dp"
                tools:text="4.5"/>
            <TextView
                android:id="@+id/tvNoOfReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                tools:text="(11 Reviews)"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tvViewProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_profile"
            android:layout_below="@id/llProviderInfo"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/textSize_14sp"
            />


        <LinearLayout
            android:id="@id/llCallMsgBtns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimen_5dp"
            android:layout_below="@id/tvViewProfile"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:orientation="horizontal"
            android:visibility="gone">
            <Button
                android:id="@+id/callBtn"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginStart="@dimen/dimen_10dp"
                android:layout_marginRight="0.2dp"
                android:layout_marginEnd="0.2dp"
                android:minHeight="@dimen/dimen_40dp"
                android:text="@string/call"
                android:textColor="@color/white"
                android:background="@drawable/left_round_btn"/>

            <FrameLayout
                android:id="@+id/frameMsgBtn"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_marginEnd="@dimen/dimen_10dp"
                android:layout_marginLeft="0.2dp"
                android:layout_marginStart="0.2dp"
                >
                <Button
                    android:id="@+id/msgBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/message"
                    android:minHeight="@dimen/dimen_40dp"
                    android:textColor="@color/white"
                    style="?android:attr/buttonBarButtonStyle"
                    android:background="@drawable/right_round_bg"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/img_circle"
                    android:id="@+id/tvMsgCount"
                    android:layout_gravity="end"
                    android:layout_marginRight="@dimen/dimen_40dp"
                    android:layout_marginEnd="@dimen/dimen_40dp"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    tools:text="10"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    />
            </FrameLayout>
        </LinearLayout>

    </RelativeLayout>
    <ImageView
        android:id="@+id/ivProviderPic"
        android:layout_width="@dimen/dimen_70dp"
        android:layout_height="@dimen/dimen_70dp"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@id/bottomLayout"
        android:layout_marginTop="-35dp"
        android:contentDescription="@string/app_name" />
    <TextView
        android:id="@+id/tvCancel"
        android:text="@string/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize_14sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/app_margin"
        android:layout_marginEnd="@dimen/app_margin"
        android:layout_marginTop="@dimen/dimen_40dp"
        android:textColor="@color/grey_john"
        android:padding="@dimen/dimen_2dp"
        android:visibility="gone"
        />
</RelativeLayout>