<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="@dimen/app_margin"
    android:layout_marginRight="@dimen/app_margin"
    android:layout_marginTop="5dp"
    app:layout_goneMarginTop="@dimen/dimen_5dp">

    <RelativeLayout
        android:id="@+id/rlHelpIndexMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5dp">

        <RelativeLayout
            android:id="@+id/rlHelpIndexTextImagePre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvHelpIndexImageTextPre"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/circle_app_fill_color"
                android:gravity="center"
                android:text="A"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_20sp"
                />

            <ImageView
                android:id="@+id/ivHelpIndexImagePre"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/circle_app_fill_color"
                android:gravity="center"
                android:visibility="gone"
                tools:ignore="ContentDescription"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tvHelpIndexCustNamePre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_margin"
            android:layout_marginRight="@dimen/app_margin"
            android:layout_toEndOf="@+id/rlHelpIndexTextImagePre"
            android:layout_toRightOf="@+id/rlHelpIndexTextImagePre"
            android:maxLines="1"
            android:text="John Phillips "
            android:textColor="@color/black_john"
            android:textSize="@dimen/textSize_14sp" />

        <TextView
            android:id="@+id/tvHelpIndexDateNTimePre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvHelpIndexCustNamePre"
            android:layout_marginLeft="@dimen/app_margin"
            android:layout_marginRight="@dimen/app_margin"
            android:layout_toEndOf="@+id/rlHelpIndexTextImagePre"
            android:layout_toRightOf="@+id/rlHelpIndexTextImagePre"
            android:text="22 June 2017"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/textSize_12sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlHelpIndexMain"
        android:layout_marginTop="@dimen/dimen_7dp">

        <TextView
            android:id="@+id/tvHelpIndexText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/app_margin"
            android:layout_marginRight="@dimen/app_margin"
            android:layout_toLeftOf="@+id/tvHelpIndexTime"
            android:layout_toStartOf="@+id/tvHelpIndexTime"
            android:textColor="@color/black_john"
            tools:text="asdrfg"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginStart="@dimen/dimen_10dp"
            />
        <TextView
            android:id="@+id/tvHelpIndexTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/black_john"

            />

    </RelativeLayout>

</RelativeLayout>