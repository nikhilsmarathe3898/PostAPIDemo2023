<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlcancel"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tvForCancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/black_john"
            android:textSize="14sp"
            android:layout_toLeftOf="@+id/ivCheckSelector"
            android:layout_toStartOf="@+id/ivCheckSelector"
            android:layout_marginRight="@dimen/dimen_5dp"
            android:layout_marginEnd="@dimen/dimen_5dp"/>

        <ImageView
            android:id="@+id/ivCheckSelector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/circle_check_uncheck"
            android:contentDescription="@string/app_name" />
    </RelativeLayout>
</LinearLayout>