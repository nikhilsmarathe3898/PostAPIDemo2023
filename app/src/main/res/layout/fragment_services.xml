<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.localgenie.home.ServicesFrag">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/llHOmeAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal">
                <TextView
                    android:id="@+id/tvYourLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/your_location"
                    android:textSize="@dimen/textSize_10sp"
                    android:padding="@dimen/dimen_5dp"/>
                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fetching location..."
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="@dimen/textSize_14sp"
                    android:drawableEnd="@drawable/ic_keyboard_arrow_down_black_24dp"
                    android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"/>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rlSearchLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/search_background"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:layout_marginBottom="@dimen/dimen_5dp"
                android:layout_marginTop="@dimen/dimen_3dp"
                android:animateLayoutChanges="true">

                <ImageView
                    android:id="@+id/ivSearchImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_search_black_24dp"
                    android:layout_marginLeft="@dimen/app_margin"
                    android:layout_marginRight="@dimen/app_margin"
                    android:contentDescription="@string/app_name"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/tvSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/ivSearchImage"
                    android:layout_toEndOf="@+id/ivSearchImage"
                    android:text="@string/search_for_service"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/dimen_55dp"
                    android:layout_marginEnd="@dimen/dimen_55dp"
                    android:paddingTop="@dimen/dimen_7dp"
                    android:paddingBottom="@dimen/dimen_7dp"
                    />
            </RelativeLayout>

            <com.utility.ShimmerLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/shimmer"
                app:shimmer_animation_duration="1500"

                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <include layout="@layout/recipe_placeholder_item"
                        android:id="@+id/included"/>
                </RelativeLayout>
            </com.utility.ShimmerLayout>

            <RelativeLayout
                android:id="@+id/rlNotOperational"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:visibility="gone"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/tvNotOperational"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ic_track_changes_black_24dp"
                    android:layout_centerInParent="true"
                    android:text="@string/we_sent_4_digit"
                    android:drawablePadding="@dimen/dimen_10dp"
                    android:textSize="@dimen/textSize_16sp"
                    android:textColor="@color/black_john"
                    android:gravity="center"
                    />

            </RelativeLayout>

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/greyBackGround"
                android:id="@+id/nestedScrollViewHome">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/llRecommended"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/white">

                        <TextView
                            android:id="@+id/tvRecommended"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:textColor="@color/black_john"
                            android:text="@string/recommendedService"
                            android:paddingTop="@dimen/dimen_8dp"
                            android:paddingBottom="@dimen/dimen_8dp"
                            android:paddingRight="@dimen/dimen_12dp"
                            android:paddingLeft="@dimen/dimen_12dp"
                            />

                        <android.support.v7.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rvRecommendedService"
                            android:layout_marginBottom="@dimen/dimen_8dp"/>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <android.support.v7.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rvTrendingService"
                            android:layout_marginTop="@dimen/dimen_8dp"
                            android:layout_marginBottom="@dimen/dimen_8dp"
                            android:background="@color/white">

                        </android.support.v7.widget.RecyclerView>
                    </RelativeLayout>


                    <!-- <android.support.v7.widget.RecyclerView
                         android:id="@+id/rvServiceCatagories"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:visibility="gone"
                         />-->
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rvHomeServiceCatagories"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        />
                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>


        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="@dimen/dimen_50dp"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_centerInParent="true"
            android:visibility="gone"
            />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </RelativeLayout>

</RelativeLayout>


