<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/dimen_8dp"
    android:layout_marginTop="@dimen/dimen_8dp"
    android:layout_marginBottom="@dimen/dimen_8dp"
    android:layout_marginRight="@dimen/dimen_8dp"
    android:layout_centerInParent="true"
    app:cardCornerRadius="@dimen/dimen_4dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_25dp"
        android:paddingRight="@dimen/dimen_25dp"
        android:paddingTop="@dimen/dimen_8dp"
        android:paddingBottom="@dimen/dimen_8dp"
        >

        <ImageView
            android:layout_width="@dimen/dimen_110dp"
            android:layout_height="@dimen/dimen_110dp"
            android:layout_gravity="center_horizontal|center"
            android:id="@+id/ivFavPro"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvFavProName"
            android:layout_gravity="center"
            android:textSize="@dimen/textSize_14sp"
            android:maxLines="@integer/id_1"
            android:textColor="@color/black_john"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvFavProCat"
            android:layout_gravity="center"
            android:textSize="@dimen/textSize_14sp"
            android:maxLines="@integer/id_1"
            android:textColor="@color/black_john"/>

    </LinearLayout>

</android.support.v7.widget.CardView>