<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radioButtonBidding"
        android:text="@string/details"
        android:drawablePadding="@dimen/dimen_20dp"
        android:drawableLeft="@drawable/circle_check_uncheck"
        android:drawableStart="@drawable/circle_check_uncheck"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingTop="@dimen/dimen_10dp"
        android:paddingBottom="@dimen/dimen_10dp"
        android:layout_marginLeft="@dimen/app_margin"
        android:layout_marginRight="@dimen/app_margin"
        android:textColor="@color/black_john"
        android:textSize="@dimen/textSize_16sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/descriptionDtls"
        android:text="@string/app_name"
        android:textColor="@color/grey_john"
        android:textSize="@dimen/textSize_14sp"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/app_margin"
        android:layout_marginEnd="@dimen/app_margin"
        android:paddingLeft="@dimen/dimen_40dp"
        android:paddingStart="@dimen/dimen_40dp"
        android:visibility="gone"
        />

</LinearLayout>