            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:id="@+id/viewFeeJob"
                android:background="@color/grey_background"
                android:layout_marginTop="@dimen/app_margin"
                android:layout_marginBottom="@dimen/app_margin"/>

            <TextView
                android:id="@+id/tvJobDetailsFeeEstimate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/feeEstimate"
                android:textAllCaps="false"
                android:textSize="@dimen/textSize_14sp"
                android:textColor="@color/black_john"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_marginRight="@dimen/app_margin"

                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rlFeeJobDet"
                >
                <include layout="@layout/fee_estimate"
                    android:id="@+id/feeEstimate"/>
            </RelativeLayout>

            <include layout="@layout/offer_bidding_edit"
                android:id="@+id/offInclude"
                android:visibility="gone"/>

        </LinearLayout>

    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:id="@+id/viewDetailsInfo"
        android:background="@color/grey_background_vdarker"
        android:layout_above="@+id/rlTotalDetailInfo"
        android:layout_marginBottom="@dimen/app_margin"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginLeft="@dimen/app_margin"
        android:layout_marginRight="@dimen/app_margin"/>


    <RelativeLayout
        android:id="@+id/rlTotalDetailInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/app_margin"
        android:layout_marginRight="@dimen/app_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvJobTotalInfo"
            android:text="@string/total"
            android:textColor="@color/black_john"
            android:textSize="@dimen/textSize_18sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvJobTotalInfoAmount"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            tools:text="@string/total"
            android:textColor="@color/black_john"
            android:textSize="@dimen/textSize_18sp"
            tools:ignore="RelativeOverlap" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvJobTotalInfoPerShift"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tvJobTotalInfoAmount"
            tools:text=""
            android:visibility="gone"
            android:textColor="@color/black_john"
            android:textSize="@dimen/textSize_12sp"
            tools:ignore="RelativeOverlap" />
    </RelativeLayout>

</RelativeLayout>