<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/llLIstNewHOme"
    android:background="@color/grey_background_lighter"
    android:layout_marginBottom="@dimen/dimen_5dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_115dp"
        android:id="@+id/frameLayoutNewHome"
        android:layout_marginBottom="2.5dp"
        android:layout_marginTop="2.5dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageBanner"
            android:contentDescription="@string/app_name"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:scaleType="fitXY"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/llHomeCategoryService"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dimen_80dp"
            android:layout_marginEnd="@dimen/dimen_80dp"
            android:layout_marginLeft="@dimen/app_margin"
            android:layout_marginStart="@dimen/app_margin"
            android:gravity="center_vertical">


                <ImageView
                    android:id="@+id/ivHomeCatPic"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:layout_marginEnd="@dimen/dimen_10dp"
                    android:layout_marginLeft="@dimen/app_margin"
                    android:layout_marginStart="@dimen/app_margin"
                    android:visibility="gone"
                    android:contentDescription="@string/app_name" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/app_margin"
                    android:layout_marginStart="@dimen/app_margin"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvHomeCatName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        tools:text="John Phillips "
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize_28sp"
                        />

                    <TextView
                        android:id="@+id/tvHomeSubCatName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="5 Miles Away"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize_14sp"
                        android:maxLines="@integer/id_1"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/ivOpenCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:layout_marginEnd="@dimen/app_margin"
                    android:layout_marginRight="@dimen/app_margin"
                    android:src="@drawable/arrow_drop_up_down_"
                    android:contentDescription="@string/app_name"
                    android:visibility="invisible"
                    />


        </LinearLayout>
    </FrameLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recyclerViewHomeCat"
        android:layout_marginBottom="@dimen/dimen_5dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:background="@color/white"
        android:visibility="gone">
    </android.support.v7.widget.RecyclerView>
</LinearLayout>