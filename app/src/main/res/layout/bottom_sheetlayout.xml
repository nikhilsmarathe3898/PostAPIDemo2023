<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llConfirmTotalDues"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical"
    app:behavior_hideable="false"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/grey_background"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvConfirmDuesPayInfo"
        android:text="pay $ 25 outstanding from you previous booking"
        android:textSize="@dimen/textSize_20sp"
        android:textColor="@color/grey_john"
        android:paddingTop="@dimen/dimen_5dp"
        android:paddingLeft="@dimen/dimen_10dp"
        android:paddingRight="@dimen/dimen_10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="10th cross Road"
        android:textSize="@dimen/textSize_14sp"
        android:textColor="@color/grey_description"
        android:id="@+id/tvConfirmDuesAddress"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:paddingLeft="@dimen/dimen_10dp"
        android:paddingRight="@dimen/dimen_10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="10th cross Road"
        android:textSize="@dimen/textSize_12sp"
        android:textColor="@color/grey_background_vdarker"
        android:id="@+id/tvConfirmDuesDate"
        android:paddingLeft="@dimen/dimen_10dp"
        android:paddingRight="@dimen/dimen_10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="@integer/id_2"
        android:layout_marginTop="@dimen/dimen_10dp">

        <TextView
            android:id="@+id/tvCancelDues"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/id_1"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:background="@color/grey_background_vdarker"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/dimen_12dp"/>
        <TextView
            android:id="@+id/tvConfirmDues"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/id_1"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:background="@color/parrotGreen"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/dimen_12dp"/>

    </LinearLayout>

</LinearLayout>