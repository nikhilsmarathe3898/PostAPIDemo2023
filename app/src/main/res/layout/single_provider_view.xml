<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="0.5dp"
    app:cardElevation="2dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivMyEventProPic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="@dimen/dimen_10dp"
            android:layout_marginLeft="@dimen/app_margin"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:layout_marginStart="@dimen/app_margin"
            android:background="@color/colorPrimary"
            android:contentDescription="@string/app_name" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dimen_5dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/tvMyEventProName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="John Phillips "
                    android:textColor="@color/black_john"
                    android:textSize="@dimen/textSize_14sp"
                    android:layout_centerVertical="true"/>
                <View
                    android:id="@+id/viewStatus"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/dimen_10dp"
                    android:layout_height="@dimen/dimen_10dp"
                    android:layout_toRightOf="@+id/tvMyEventProName"
                    android:layout_toEndOf="@+id/tvMyEventProName"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginStart="@dimen/dimen_10dp"
                    android:background="@drawable/online_status"
                    />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/favIcon"
                    android:visibility="gone"
                    android:layout_toRightOf="@+id/viewStatus"
                    android:layout_toEndOf="@+id/viewStatus"
                    android:src="@drawable/ic_favorites"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:contentDescription="@string/addToFav" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvMyEvnetProStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="5 Miles Away"
                android:textColor="@color/grey_description"
                android:textSize="@dimen/textSize_12sp" />

            <RatingBar
                android:id="@+id/rtProvidrDtls"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:numStars="5"
                android:progressDrawable="@drawable/ratingselector"
                android:layout_marginTop="@dimen/dimen_2dp"
                android:rating="5.0"
                android:stepSize="0.5"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/app_margin"
            android:layout_marginRight="@dimen/app_margin"
            android:layout_gravity="end|center"
            android:layout_marginTop="-11dp"
            android:gravity="end"
            android:orientation="vertical"
            android:id="@+id/llAmountPerHr"
            android:visibility="gone"
            >
            <TextView
                android:id="@+id/tvProAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$ 120"
                android:textColor="@color/black_john"
                android:textSize="@dimen/textSize_18sp"
                />
            <TextView
                android:id="@+id/tvProTimeOfArrival"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Per hour"
                android:textColor="@color/black_john"
                android:textSize="@dimen/textSize_10sp"
                />

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>