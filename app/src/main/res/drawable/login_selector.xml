<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_pressed="false">
                <shape android:shape="rectangle">
                    <corners android:radius="50dp"/>
                    <stroke
                        android:width="1dp"
                        android:color="@color/parrotGreen" />
                    <solid android:color="@color/grey_background_darker" />
                </shape>
            </item>
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <corners android:radius="50dp"/>
                    <stroke
                        android:width="1dp"
                        android:color="@color/parrotGreen" />
                    <solid android:color="@color/grey_background_vdarker" />
                </shape>
            </item>
        </selector>
    </item>
</layer-list>